package handlers

import (
	"github.com/gin-gonic/gin"
	"net/http"
)

// WelcomeHandler is a handler function for the welcome route in Gin.
func WelcomeHandler(c *gin.Context) {
	c.JSON(http.StatusOK, gin.H{"message": "Welcome Handler in Gin!"})
}

// HelloHandler is a handler function for the hello route in Gin.
func HelloHandler(c *gin.Context) {
	c.JSON(http.StatusOK, gin.H{"message": "Hello Handler in Gin!"})
}
